<form>
<select name="sort">
    <% @sort.each do |k, v| %>
        <option value=<%= k %> <%= params[:sort] == k.to_s ? ' selected' : '' %>><%= v %></option>
    <% end %>
</select>
<input type='submit' value='Сортировать'>
</form>

<div class = "row">
<% @products.each do |product| %>
    <div class="col-sm-2 mt-2">
        <div class="card">
            <!-- <img src="..." class="card-img-top" alt="..."> -->
            <div class="card-body">
                <h5 class="card-title"><%= product.title %></h5>
                <p class="card-text"><%= product.description %></p>
                <%= link_to 'Open product', product, class: 'btn btn-primary' %>
            </div>
        </div>
    </div>
<% end %>
</div>