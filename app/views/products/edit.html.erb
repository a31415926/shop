<div class="container">
    <%= form_for @product do |f| %>
        <%= render 'devise/shared/error_messages', resource: @product %>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'w-50 form-control' %>
        </div>

        <div class="form-group mt-3">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'w-50 form-control' %>
        </div>

        <div class="form-group mt-3">
            <%= f.label :images %>
            <%= f.file_field :images, class: 'w-50 form-control', multiple: true %>
        </div>

        <%= f.submit 'Update', class: "mt-3" %>
    <% end %>
</div>