<main class="login-form">
  <div class="cotainer">
    <div class="row justify-content-center">
      <div class="col-md-5">
        <div class="card">
          <div class="card-header">Please sign in</div>
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
              <div class="form-group row">
                <%= f.label :email, class: 'col-md-4 col-form-label text-md-right' %>
                <div class="col-md-6">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                </div>
              </div>

              <div class="form-group row">
                <%= f.label :password, class: 'col-md-4 col-form-label text-md-right' %>
                <div class="col-md-6">
                  <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
                </div>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="form-group row">
                  <div class="col-md-6 offset-md-4">
                    <div class="checkbox">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  </div>
                </div>
              <% end %>

              <div class="col-md-6 offset-md-4">
                <%= f.submit "Log in", class: 'btn btn-primary' %>
                <%= link_to 'Forgot Your Password?', new_password_path(resource_name), class: 'btn btn-link' %>
              </div>
              <div>
                <%= link_to 'Register', new_registration_path(resource_name), class: 'btn btn-link' %>
              </div>
            <% end %>
          </div>
          </div>
       </div>
    </div>
  </div>
</main>