<% @items.each do |item| %>
    <div class="col-sm-2 mt-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= item.product.title %></h5>
                <i class="bi bi-trash"></i>
                <p class="card-text">
                    <div>Quantity: 
                        <% if item.cnt >= 2%>
                            <%= link_to '-', 
                                product_order_item_path(product_id: item.product.id, id: item.id, cnt: item.cnt-1),
                                data: { "turbo-method": :put }, class: 'btn btn-outline-success'
                            %>
                        <% end %>
                        <%= item.cnt %>
                        <%= link_to '+', 
                                product_order_item_path(product_id: item.product.id, id: item.id, cnt: item.cnt+1),
                                data: { "turbo-method": :put }, class: 'btn btn-outline-success'
                        %>
                    </div>
                    <div>Price: <%= item.price %> (total: <%= item.price*item.cnt %>) </div>
                </p>
                <%= link_to 'delete', 
                        product_order_item_path(product_id: item.product.id, id: item.id),
                        data: { "turbo-method": :delete },
                        class: 'btn btn btn-danger'
                %>

            </div>
        </div>
    </div>
<% end %>